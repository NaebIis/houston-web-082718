<%= flash[:error] %>

<%= form_with model: User.new do |f| %>
  <%= f.text_field :username, placeholder: "Username" %>
  <%= f.text_field :secret, placeholder: "Secret" %>
  <%= f.password_field :password, placeholder: "Password" %>
  <%= f.password_field :password_confirmation, placeholder: "password_confirmation" %>
  <%= f.submit %>
<% end %>